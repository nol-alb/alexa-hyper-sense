{
    "type": "APLA",
    "version": "0.8",
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": {
            "type": "Selector",
            "description": "Change 'type' above to try different Selector Component Types like Sequencer",
            "items": [
                {
                    "type": "Selector",
                    "strategy": "randomItem",
                    "when": "${payload.getLevelUpResults.correctWrong == 'correct' && payload.getLevelUpResults.yesNo == 'yes'}",
                    "items": [
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Woo-hoo, you figured one out, can you try another? Let me know if you're not sure!"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "That's correct! Good job! Can you remember another word? Let me know if you can't!"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "YES! I did use that word. Can you recall anymore? Let me know if you're not sure!"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Someone's on a roll. Let's keep this streak going. Let me know if you've run out of words!"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "AWESOME, you got it. Let's go again. Let me know if you don't know anymore"
                        }
                    ]
                },
                {
                    "type": "Sequencer",
                    "when": "${payload.getLevelUpResults.correctWrong == 'correct' && payload.getLevelUpResults.yesNo == 'no'}",
                    "items": [
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Good job, you've finished the round!"
                        },
                        {
                            "type": "Silence",
                            "duration": 700
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "If you wish to restart, just request for the environment you desire."
                        },
                        {
                            "type": "Silence",
                            "duration": 700
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "If you want to exit, just say bye."
                        }
                    ]
                },
                {
                    "type": "Speech",
                    "contentType": "text",
                    "when": "${payload.getLevelUpResults.correctWrong == 'wrong' && payload.getLevelUpResults.yesNo == 'yes'}",
                    "content": "Sorry, that's incorrect. Try again? Just let me know if you don't know!"
                },
                {
                    "type": "Sequencer",
                    "when": "${payload.getLevelUpResults.correctWrong == 'wrong' && payload.getLevelUpResults.yesNo == 'no'}",
                    "items": [
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "I'm sorry you didn't get them all! You can give it another try whenever you like!"
                        },
                        {
                            "type": "Silence",
                            "duration": 500
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "If you wish to restart, just request for the environment you desire."
                        },
                        {
                            "type": "Silence",
                            "duration": 500
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "If you want to exit, just say bye."
                        }
                    ]
                }
            ]
        }
    }
}